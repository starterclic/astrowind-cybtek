---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Cybtek - Propulsez votre entreprise avec l'IA sur mesure',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Révolutionnez votre entreprise',
        href: '/contact',
        target: '_blank',
        icon: 'tabler:rocket',
      },
      { text: 'Découvrez notre expertise', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'Cybtek Hero Image' }}
  >
    <Fragment slot="title">
      Propulsez votre succès avec <span class="hidden xl:inline"></span>
      <span class="text-accent dark:text-white highlight">l'IA sur mesure</span> de Cybtek
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Transformez votre entreprise grâce à nos solutions IA de pointe. De l'efficacité opérationnelle aux expériences client révolutionnaires, Cybtek est votre partenaire pour l'innovation.
      </span>
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Cybtek : L'avenir de votre entreprise commence ici.</span>
      Idéal pour les TPE-PME visionnaires, les entrepreneurs audacieux et les startups en quête d'excellence.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Avantages Exclusifs"
    title="Pourquoi Cybtek est votre meilleur allié ?"
    subtitle="Découvrez comment nos solutions IA de pointe propulsent votre entreprise vers de nouveaux sommets, surpassant toute concurrence."
    items={[
      {
        title: 'IA Ultra-performante sur Mesure',
        description:
          'Nos solutions IA s'adaptent parfaitement à votre entreprise, offrant des performances inégalées et un ROI exceptionnel qui redéfinit vos standards.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Support d'Élite 24/7',
        description:
          'Notre équipe d'experts est à votre disposition jour et nuit, garantissant une résolution instantanée de vos défis les plus complexes.',
        icon: 'tabler:headset',
      },
      {
        title: 'Déploiement Éclair',
        description:
          "Intégration fluide et rapide grâce à notre technologie Docker de pointe. Soyez opérationnel en un temps record et devancez vos concurrents.",
        icon: 'tabler:bolt',
      },
      {
        title: 'Formation Transformative',
        description:
          'Nos programmes de formation sur mesure transforment votre équipe en experts IA, maximisant votre potentiel technologique et votre avantage concurrentiel.',
        icon: 'tabler:brain',
      },
      {
        title: 'Solutions Open Source de Pointe',
        description:
          'Bénéficiez des meilleures technologies open source, optimisées et sécurisées par nos experts pour une fiabilité et une performance inégalées.',
        icon: 'tabler:lock-open',
      },
      {
        title: 'Boost SEO Stratégique',
        description:
          "Propulsez votre visibilité en ligne et attirez un flux constant de clients qualifiés grâce à notre expertise SEO avancée et nos stratégies de croissance digitale.",
        icon: 'tabler:chart-arrows-vertical',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Solutions IA Révolutionnaires',
        description: `Transformez radicalement votre entreprise avec nos solutions IA ultra-performantes. De l'automatisation intelligente à l'analyse prédictive, nous propulsons votre croissance à des niveaux inédits.`,
        icon: 'tabler:wand',
      },
      {
        title: 'GPTs Nouvelle Génération',
        description:
          'Accédez à une puissance conversationnelle inégalée avec notre Clone GPTs amélioré. Créez des expériences client uniques qui redéfinissent les standards de votre industrie.',
        icon: 'tabler:robot',
      },
      {
        title: 'StartIA : Votre Accélérateur de Succès',
        description:
          "Propulsez vos projets IA complexes avec StartIA. Notre plateforme révolutionnaire simplifie la gestion et l'intégration, pour des résultats rapides et spectaculaires qui dépassent toutes vos attentes.",
        icon: 'tabler:rocket',
      },
      {
        title: 'Accompagnement Stratégique d'Élite',
        description:
          'Bénéficiez d'un accompagnement personnalisé par nos experts IA. De l'idéation au déploiement, nous sommes votre partenaire de confiance pour garantir un succès exceptionnel et durable.',
        icon: 'tabler:users',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1508385082359-f17333c6d6de?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2187&q=80',
      alt: 'Solutions IA Cybtek',
    }}
  >
    <Fragment slot="content">Cybtek : L'IA qui propulse les leaders de demain vers un succès inégalé</Fragment>
  </Content>

  <!-- Content Widget (suite) et autres widgets... -->

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Lancez votre transformation maintenant',
        href: '/contact',
        target: '_self',
        icon: 'tabler:rocket',
      },
    ]}
  >
    <Fragment slot="title">
      Prêt à dominer votre marché avec Cybtek ?
    </Fragment>

    <Fragment slot="subtitle">
      Ne laissez pas vos concurrents vous distancer. Rejoignez l'élite des entreprises propulsées par l'IA Cybtek et redéfinissez les règles du jeu. <br class="hidden md:inline" />Votre succès exceptionnel commence maintenant !
    </Fragment>
  </CallToAction>
</Layout>
